<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sngc"
    tools:context=".Sprint_count">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="390dp"
        android:layout_height="181dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="491dp"
        android:fontFamily="@font/bungee_shade"
        android:text="SELECT SPRINT LENGTH"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:textStyle="normal|bold|italic"
        app:fontFamily="@font/bungee_shade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_sprint"
        android:layout_width="152dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="352dp"
        android:background="@drawable/roundedbutton"
        android:popupBackground="?attr/actionModeBackground" />

</RelativeLayout>